<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="EngineData\Models\Rifle_fbx\**" />
    <Compile Remove="EngineData\Models\Rifle_obj\**" />
    <EmbeddedResource Remove="EngineData\Models\Rifle_fbx\**" />
    <EmbeddedResource Remove="EngineData\Models\Rifle_obj\**" />
    <None Remove="EngineData\Models\Rifle_fbx\**" />
    <None Remove="EngineData\Models\Rifle_obj\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="EngineData\Models\Rifle\M1 Garand Lowpoly.fbx" />
    <None Remove="EngineData\Models\Rifle\M1 Garand.mtl" />
    <None Remove="EngineData\Models\Rifle\M1 Garand.obj" />
