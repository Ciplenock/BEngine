    </Content>
    <Content Include="EngineData\Models\Rifle\M1 Garand.mtl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="EngineData\Models\Rifle\M1 Garand.obj">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="EngineData\Models\Rifle\textures\LP_Checker_BaseColor.jpg">
