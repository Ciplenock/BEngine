    <Content Include="EngineData\Models\Rifle\textures\LP_Checker_Roughness.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="EngineData\Shaders\PointLight.frag">
