    <None Remove="EngineData\Models\Rifle\textures\LP_Checker_Normal.jpg" />
    <None Remove="EngineData\Models\Rifle\textures\LP_Checker_Roughness.jpg" />
    <None Remove="EngineData\Shaders\PointLight.frag" />
    <None Remove="EngineData\Shaders\PointLight.vert" />
    <None Remove="EngineData\Shaders\Shader.frag" />
    <None Remove="EngineData\Shaders\Shader.vert" />
    <None Remove="EngineData\Textures\Bricks.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="EngineData\Models\Rifle\M1 Garand Lowpoly.fbx">
